from tkinter import *
import Dialog

class InitDialog(Dialog.Dialog):
    def create_widgets(self, master):
        Label(master, text="States:").grid(row=0)
        Label(master, text="Alphabet:").grid(row=1)
        Label(master, text="Empty symbol:").grid(row=2)
        Label(master, text="Initial state:").grid(row=3)
        Label(master, text="Initial data:").grid(row=4)
        self.e1 = Entry(master)
        self.e2 = Entry(master)
        self.e3 = Entry(master)
        self.e4 = Entry(master)
        self.e5 = Entry(master)
        self.e1.grid(row=0, column=1)
        self.e2.grid(row=1, column=1)
        self.e3.grid(row=2, column=1)
        self.e4.grid(row=3, column=1)
        self.e5.grid(row=4, column=1)
        return self.e1 # initial focus

    def apply(self):
        slist = self.e1.get()
        alphabet = self.e2.get()
        esym = self.e3.get()
        istate = self.e4.get()
        idata = self.e5.get()
        return (slist, alphabet, esym, istate, idata)


root = Tk()
frame = Frame(master=root)
text = Entry(master=frame)
but = Button(master=frame)
text.pack()
but.pack()
res = InitDialog(root).result
but.configure(text=str(d))
mainloop()
root.destroy()

